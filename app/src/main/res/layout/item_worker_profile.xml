<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEE"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/card">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_wprofile_img"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@drawable/card"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultuser" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_wprofile_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewGend"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/gender" />
                    <TextView
                        android:id="@+id/tv_wprofile_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        android:text="Gender"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tv_wprofile_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Age:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wprofile_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:id="@+id/imageViewAddr"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/address" />

                    <TextView
                        android:id="@+id/tv_wprofile_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Address"
                        android:layout_gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wprofile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_horizontal"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/tv_wprofile_phoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone No."
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wprofile_interest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ll_wprofile_license"
                android:layout_marginTop="7dp">
                <ImageView
                    android:id="@+id/imageViewLic"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/license" />
                <TextView
                    android:id="@+id/tv_wprofile_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="License:"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ll_wprofile_language"
                android:layout_marginTop="7dp">
                <ImageView
                    android:id="@+id/imageViewLang"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/language" />
                <TextView
                    android:id="@+id/tv_wprofile_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:text="Language:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wprofile_interestTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/textViewInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Interest"
                    android:textColor="@color/GhostWhite"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"></LinearLayout>

                <TextView
                    android:id="@+id/textViewExpected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/GhostWhite"
                    android:gravity="center"
                    android:text="Expected Wages\n(per month)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>